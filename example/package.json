{
    "name": "api-tester",
    "module": "src/main.tsx",
    "type": "module",
    "scripts": {
        "dev": "bun run --watch src/server.ts",
        "build": "bun build ./src/main.tsx --outdir ./dist --target browser --minify --define 'process.env.API_URL=\"${API_URL}\"' --define 'process.env.WEBSOCKET_URL=\"${WEBSOCKET_URL}\"'",
        "start": "NODE_ENV=production bun run src/server.ts"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "bun-types": "latest",
        "typescript": "^5.0.0"
    }
} 